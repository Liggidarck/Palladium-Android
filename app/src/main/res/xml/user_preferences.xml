<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Основные">

        <SwitchPreference
            android:defaultValue="false"
            android:key="user_dark_theme"
            android:title="Тёмная тема" />

    </PreferenceCategory>
    <PreferenceCategory
        android:textColor="#1976D2"
        android:title="@string/tasks">

        <SwitchPreference
            android:defaultValue="false"
            android:key="economy_traffic"
            android:summary="Изображения заявок перестанут загружаться автоматически"
            app:title="Экономия трафика" />

        <ListPreference
            android:defaultValue="2"
            android:entries="@array/maximumBufferSizeText"
            android:entryValues="@array/maximumBufferSizeValues"
            android:key="buffer_size"
            android:title="Буфер изображения"
            android:summary="Максимально допустимый размер буфера изображения"/>

    </PreferenceCategory>


</PreferenceScreen>