<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_task"
            android:textColor="?attr/textColor"
            android:textSize="22sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@drawable/line_gray"
        android:layout_marginTop="12dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ost_text"
        android:textColor="?attr/textColor"
        android:textSize="20sp"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/ost_school_new_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ost_text"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/ost_aist_new_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ost_stork_text"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/ost_yagodka_new_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ost_berry_text"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bar_text"
        android:textColor="?attr/textColor"
        android:textSize="20sp"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/bar_school_new_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bar_text"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/bar_rucheek_new_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bar_stream_text"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/bar_start_new_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bar_star_text"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_marginTop="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>