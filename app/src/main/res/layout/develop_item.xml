<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp">

    <TextView
        android:id="@+id/title_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palladium alpha.1"
        android:textColor="?attr/textColor"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/date_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_version"
        android:text="13 июня 2021" />

    <TextView
        android:id="@+id/description_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_release"
        android:layout_marginTop="10dp"
        android:text="DESCRIPTION"
        android:textColor="?attr/textColor"
        android:textSize="15sp" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_release"
        android:layout_marginTop="10dp" />

</RelativeLayout>