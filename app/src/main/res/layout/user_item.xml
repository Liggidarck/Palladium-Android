<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_view_name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text_view_email_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:maxLines="1"
        android:layout_below="@id/text_view_name_user"/>

    <TextView
        android:id="@+id/text_view_role_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role"
        android:maxLines="1"
        android:layout_below="@id/text_view_email_user"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@drawable/line_gray"
        android:layout_below="@+id/text_view_role_user"
        android:layout_marginTop="5dp"/>

</RelativeLayout>